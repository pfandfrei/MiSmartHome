<homegearDevice version="1">
    <supportedDevices>
        <device id="MiPlug">
            <description>Xiaomi Smart Socket - homegear interface</description>
            <typeNumber>0x28f0</typeNumber>
        </device>
    </supportedDevices>
    <runProgram>
    </runProgram>
    <properties/>
    <functions>
        <function channel="0" type="SETTINGS" channelCount="1">
            <properties/>
            <configParameters>custom_ch0_master</configParameters>
            <variables>custom_ch0_values</variables>
        </function>
        <function channel="1" type="READINGS" channelCount="1">
            <properties/>
            <configParameters>config</configParameters>
            <variables>custom_ch1_readings</variables>
        </function>
    </functions>
    <packets/>
    <parameterGroups>
        <configParameters id="config"/>
        <configParameters id="custom_ch0_master">
            <parameter id="SID">
                <properties>
                    <unit></unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalString>
                    <defaultValue></defaultValue>
                </logicalString>
                <physicalString>
                    <operationType>config</operationType>
                </physicalString>
            </parameter>
        </configParameters>
        <variables id="custom_ch0_values">
            <parameter id="HEARTBEAT">
                <properties>
                    <writeable>true</writeable>
                    <addonWriteable>true</addonWriteable>
                    <unit></unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalDecimal/>
                <physicalInteger>
                    <operationType>store</operationType>
                </physicalInteger>
            </parameter> 
        </variables>
        <variables id="custom_ch1_readings">
            <parameter id="STATE">
                <properties>
                    <writeable>true</writeable>
                    <addonWriteable>true</addonWriteable>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalEnumeration>
                    <value>
                        <id>OFF</id>
                        <index>0</index>
                    </value>
                    <value>
                        <id>ON</id>
                        <index>1</index>
                    </value>
                    <value>
                        <id>UNKNOWN</id>
                        <index>2</index>
                    </value>
                </logicalEnumeration>
                <physicalInteger>
                    <operationType>store</operationType>
                </physicalInteger>
            </parameter>
            <parameter id="LOAD_VOLTAGE">
                <properties>
                    <writeable>true</writeable>
                    <addonWriteable>true</addonWriteable>
                    <unit>mV</unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalInteger/>
                <physicalInteger>
                    <operationType>store</operationType>
                </physicalInteger>
            </parameter>
            <parameter id="LOAD_POWER">
                <properties>
                    <writeable>true</writeable>
                    <addonWriteable>true</addonWriteable>
                    <unit>W</unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalDecimal/>
                <physicalInteger>
                    <operationType>store</operationType>
                </physicalInteger>
            </parameter>
            <parameter id="POWER_CONSUMED">
                <properties>
                    <writeable>true</writeable>
                    <addonWriteable>true</addonWriteable>
                    <unit>kWh</unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalDecimal/>
                <physicalInteger>
                    <operationType>store</operationType>
                </physicalInteger>
            </parameter>
        </variables>
    </parameterGroups>
</homegearDevice>

